# Environment Configuration Template
# Copy this file to .env.local for development or .env.production for production

# API Base URL - Change based on environment
# Development: http://localhost:6000
# Production: https://your-api-domain.com
VITE_API_BASE_URL=http://localhost:6000

# Frontend Base URL
# Development: http://localhost:5173
# Production: https://your-frontend-domain.com
VITE_FRONTEND_BASE_URL=http://localhost:5173

# Backend Base URL (for internal references)
# Development: http://localhost:6000
# Production: https://your-api-domain.com
VITE_BACKEND_BASE_URL=http://localhost:6000

# Environment mode
VITE_MODE=development

# API Proxy Target (used by Vite dev server)
VITE_API_PROXY_TARGET=http://localhost:6000
